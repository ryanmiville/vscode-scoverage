{
  "name": "scoverage",
  "displayName": "Scoverage",
  "description": "",
  "version": "0.0.1",
  "publisher": "ryanmiville",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:scoverage.toggleCoverage",
    "onView:scoveragePackages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scoverage.toggleCoverage",
        "title": "Scoverage: Toggle Test Coverage"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "scoveragePackages",
          "name": "Scoverage"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "scoveragePackages",
        "contents": "No Scoverage data loaded.\n[Load Scoverage Data](command:scoverage.toggleCoverage)",
        "when": "workbenchState != empty"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "@types/xml2js": "^0.4.9",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "xml2js": "^0.4.23"
  }
}